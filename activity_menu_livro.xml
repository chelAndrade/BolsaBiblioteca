<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLivro"
    tools:layout_editor_absoluteY="81dp">

    <TableLayout
        android:id="@+id/cad_livros"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:visibility="visible">

            <EditText
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:hint="Titulo"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/Autor"
                app:layout_constraintTop_toBottomOf="@+id/Autor" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Spinner
                android:id="@+id/Autor"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:entries="@array/Autor"
                app:layout_constraintRight_toRightOf="parent" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Editora"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/Autor"
            app:layout_constraintTop_toBottomOf="@+id/Autor" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />


       <!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
            <Button android:text="Button" android:id="@+id/btn"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </LinearLayout>-->
        <EditText
            android:id="@+id/ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <!--android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Ano"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/ano"
            app:layout_constraintTop_toBottomOf="@+id/ano" />-->

        <Button
            android:id="@+id/btncadastro"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

       <!--<Button
            android:id="@+id/btnExcluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Lista/Exclui"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deletar"
            android:id = "@+id/btnExcluir"
            android:layout_alignParentBottom = "true"
            android:layout_alignParentLeft = "true"
            android:layout_alignRight = "@+id/button2"
            android:layout_alignEnd = "@+id/button2" />






        />

        <Button
            android:id="@+id/Voltar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Voltar"
            app:layout_constraintStart_toStartOf="@+id/btncadastro"
            app:layout_constraintTop_toBottomOf="@+id/btncadastro" />


    </TableLayout>


</android.support.constraint.ConstraintLayout>